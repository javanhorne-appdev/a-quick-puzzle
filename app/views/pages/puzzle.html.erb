<%= render({ :partial => "pages/intro.html.erb" })%>

<p class="lead">
  Your guesses:
</p>


<% if @guess != nil%>
<% @guess.each do |index| %>
<%if (index.fetch("first_num") < index.fetch("second_num")) && (index.fetch("second_num") < index.fetch("third_num"))%>
<p class="lead">
  <span class="badge badge-success">
  <%=index.fetch("first_num")%>

  </span>

  <span class="badge badge-success">
     <%=index.fetch("second_num")%>
  </span>

  <span class="badge badge-success">
      <%=index.fetch("third_num")%>
  </span>

  <span class="text-success">
      Yes!
  </span>
</p>
<% else %>
<p class="lead">
  <span class="badge badge-danger">
  <%=index.fetch("first_num")%>

  </span>

  <span class="badge badge-danger">
     <%=index.fetch("second_num")%>
  </span>

  <span class="badge badge-danger">
      <%=index.fetch("third_num")%>
  </span>

  <span class="text-danger">
      No!
  </span>
</p>
<% end %>
<% end %>
<% end %>


<p class="lead"><strong>Enter a sequence to test:</strong></p>

<form action="/record_guess" method="post">
  <label for="first_box">
    First number
  </label>

  <input id="first_box" name="first_num" type="text">

  <label for="second_box">
    Second number
  </label>

  <input id="second_box" name="second_num" type="text">

  <label for="third_box">
    Third number
  </label>

  <input id="third_box" name="third_num" type="text">

  <button>
    Check
  </button>
</form>

<hr>

